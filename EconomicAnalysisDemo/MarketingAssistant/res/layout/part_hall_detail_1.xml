<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/block_margin" >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:gravity="center"
                android:padding="1dp"
                android:text="@string/dataOfDays"
                android:textColor="@android:color/black"
                android:textSize="18sp"
                android:textStyle="bold" />

            <CheckBox
                android:id="@+id/check_table_achart"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:button="@drawable/selector_histogram_or_form" />

        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dip"
            android:background="@drawable/white_dialog_spilator" />

        <ViewSwitcher
            android:id="@+id/viewSwitcher1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inAnimation="@android:anim/fade_in"
            android:minHeight="250dp"
            android:outAnimation="@android:anim/fade_out" >

            <TableLayout
                android:id="@+id/table_businessData"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/diliver_d4" >

                <TableRow
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical" >

                    <TextView
                        style="@style/tableItemStyle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="1dp"
                        android:text="@string/date"
                        android:textStyle="bold" />

                    <TextView
                        style="@style/tableItemStyle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:ems="3"
                        android:padding="1dp"
                        android:text="4g资费新增"
                        android:textStyle="bold" />

                    <TextView
                        style="@style/tableItemStyle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:ems="3"
                        android:padding="1dp"
                        android:text="4g终端销量"
                        android:textStyle="bold" />

                    <TextView
                        style="@style/tableItemStyle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:ems="3"
                        android:padding="1dp"
                        android:text="宽带发展量"
                        android:textStyle="bold" />

                    <TextView
                        style="@style/tableItemStyle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:ems="3"
                        android:padding="1dp"
                        android:text="@string/rankingOfSameTypeInSameDay"
                        android:textStyle="bold" />
                </TableRow>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dip"
                    android:background="@drawable/white_dialog_spilator" />
            </TableLayout>

            <LinearLayout
                android:id="@+id/linearLayout_Data"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical" >
            </LinearLayout>
        </ViewSwitcher>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dip"
            android:background="@drawable/white_dialog_spilator" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/block_margin" >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:gravity="center"
                android:padding="1dp"
                android:text="@string/dataOfMonths"
                android:textColor="@android:color/black"
                android:textSize="18sp"
                android:textStyle="bold" />

            <CheckBox
                android:id="@+id/check_table_achart2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:button="@drawable/selector_histogram_or_form" />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dip"
            android:background="@drawable/white_dialog_spilator" />

        <ViewSwitcher
            android:id="@+id/viewSwitcher2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inAnimation="@android:anim/fade_in"
            android:minHeight="250dp"
            android:outAnimation="@android:anim/fade_out" >

            <TableLayout
                android:id="@+id/table_businessData2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/diliver_d4" >

                <TableRow
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical" >

                    <TextView
                        style="@style/tableItemStyle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="1dp"
                        android:text="@string/month"
                        android:textStyle="bold" />

                    <TextView
                        style="@style/tableItemStyle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:ems="3"
                        android:padding="1dp"
                        android:text="4g资费新增"
                        android:textStyle="bold" />

                    <TextView
                        style="@style/tableItemStyle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:ems="3"
                        android:padding="1dp"
                        android:text="4g终端销量"
                        android:textStyle="bold" />

                    <TextView
                        style="@style/tableItemStyle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:ems="3"
                        android:padding="1dp"
                        android:text="宽带发展量"
                        android:textStyle="bold" />

                    <TextView
                        style="@style/tableItemStyle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:ems="3"
                        android:padding="1dp"
                        android:text="@string/rankingOfSameTypeInSameMonth"
                        android:textStyle="bold" />
                </TableRow>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dip"
                    android:background="@drawable/white_dialog_spilator" />
            </TableLayout>

            <LinearLayout
                android:id="@+id/linearLayout_Data2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical" >
            </LinearLayout>
        </ViewSwitcher>
    </LinearLayout>

</ScrollView>