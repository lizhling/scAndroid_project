<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f2f2f2"
    android:gravity="center_horizontal"
    android:orientation="vertical" >

    <include layout="@layout/part_head_bar" />

    <RadioGroup
        android:id="@+id/radioGroup1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <RadioButton
            android:id="@+id/radioButton_channelList"
            style="@style/radioStyle2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="常用渠道列表" />

        <RadioButton
            android:id="@+id/radioButton_ChannelTree"
            style="@style/radioStyle2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="渠道树" />

        <RadioButton
            android:id="@+id/radioButton_favorite"
            style="@style/radioStyle2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="收藏网点" />
    </RadioGroup>

    <include layout="@layout/part_search_bar" />

    <android.support.v4.view.ViewPager
        android:id="@+id/viewPager"
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="猪头" />

        <DatePicker
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <TimePicker
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </android.support.v4.view.ViewPager>

</LinearLayout>