<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_white_f2"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:orientation="vertical" >

     <include layout="@layout/part_head_bar" />
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="@dimen/block_margin"
                android:background="@drawable/corners_bg"
                android:paddingBottom="@dimen/block_padding5"
                android:paddingTop="@dimen/block_padding5" >

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:paddingLeft="@dimen/block_padding5"
                    android:paddingRight="@dimen/block_padding" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="日期"
                        android:textSize="@dimen/text_size_1" />

                    <TextView
                        android:id="@+id/date_et"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@drawable/button_style"
                        android:drawablePadding="@dimen/block_padding"
                        android:drawableRight="@drawable/selector_arrow_down"
                        android:gravity="center"
                        android:padding="@dimen/block_padding"
                        android:singleLine="true"
                        android:textSize="@dimen/text_size_1" />
                </TableRow>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dip"
                    android:background="@drawable/white_dialog_spilator" />

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:paddingLeft="@dimen/block_padding5"
                    android:paddingRight="@dimen/block_padding5" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="活动名称"
                        android:textSize="@dimen/text_size_1" />

                    <EditText
                        android:id="@+id/activity_name_et"
                        android:layout_width="0dip"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/block_padding5"
                        android:layout_weight="1"
                        android:background="@color/white"
                        android:gravity="center_vertical"
                        android:hint="请输入活动名称"
                        android:paddingBottom="@dimen/block_padding"
                        android:paddingTop="@dimen/block_padding"
                        android:singleLine="true" />
                </TableRow>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dip"
                    android:background="@drawable/white_dialog_spilator" />

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:paddingLeft="@dimen/block_padding5"
                    android:paddingRight="@dimen/block_padding5" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="活动详情"
                        android:textSize="@dimen/text_size_1" />

                    <EditText
                        android:id="@+id/activity_desc_et"
                        android:layout_width="0dip"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/block_padding5"
                        android:layout_weight="1"
                        android:background="@color/white"
                        android:gravity="center_vertical"
                        android:hint="请输入活动详情"
                        android:paddingBottom="@dimen/block_padding"
                        android:paddingTop="@dimen/block_padding"
                        android:singleLine="true" >
                    </EditText>
                </TableRow>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dip"
                    android:background="@drawable/white_dialog_spilator" />

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:paddingLeft="@dimen/block_padding5"
                    android:paddingRight="@dimen/block_padding5" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="活动等级"
                        android:textSize="@dimen/text_size_1" />

                    <EditText
                        android:id="@+id/activity_levl_et"
                        android:layout_width="0dip"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/block_padding5"
                        android:layout_weight="1"
                        android:background="@color/white"
                        android:gravity="center_vertical"
                        android:hint="请输入活动等级"
                        android:paddingBottom="@dimen/block_padding"
                        android:paddingTop="@dimen/block_padding"
                        android:singleLine="true" >
                    </EditText>
                </TableRow>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dip"
                    android:background="@drawable/white_dialog_spilator" />

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:paddingLeft="@dimen/block_padding5"
                    android:paddingRight="@dimen/block_padding5" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="归属竞争"
                        android:textSize="@dimen/text_size_1" />

                    <TextView
                        android:id="@+id/code_text"
                        android:layout_width="0dip"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/block_padding5"
                        android:layout_weight="1"
                        android:background="@color/white"
                        android:enabled="false"
                        android:gravity="center_vertical"
                        android:paddingBottom="@dimen/block_padding"
                        android:paddingTop="@dimen/block_padding"
                        android:singleLine="true"
                        android:text="由系统自动生成"
                        android:textSize="@dimen/text_size_1" />
                </TableRow>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dip"
                    android:background="@drawable/white_dialog_spilator" />

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:paddingLeft="@dimen/block_padding5"
                    android:paddingRight="@dimen/block_padding5" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="归属商圈"
                        android:textSize="@dimen/text_size_1" />

                    <EditText
                        android:id="@+id/bus_area_et"
                        android:layout_width="0dip"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/block_padding5"
                        android:layout_weight="1"
                        android:background="@color/white"
                        android:gravity="center_vertical"
                        android:hint="请输入归属商圈"
                        android:paddingBottom="@dimen/block_padding"
                        android:paddingTop="@dimen/block_padding"
                        android:singleLine="true" />
                </TableRow>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dip"
                    android:background="@drawable/white_dialog_spilator" />

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:paddingLeft="@dimen/block_padding5"
                    android:paddingRight="@dimen/block_padding5" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="活动类型"
                        android:textSize="@dimen/text_size_1" />

                    <EditText
                        android:id="@+id/activity_type_et"
                        android:layout_width="0dip"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/block_padding5"
                        android:layout_weight="1"
                        android:background="@color/white"
                        android:gravity="center_vertical"
                        android:hint="请输入活动类型"
                        android:paddingBottom="@dimen/block_padding"
                        android:paddingTop="@dimen/block_padding"
                        android:singleLine="true" />
                </TableRow>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dip"
                    android:background="@drawable/white_dialog_spilator" />

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:paddingLeft="@dimen/block_padding5"
                    android:paddingRight="@dimen/block_padding5" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="活动补贴"
                        android:textSize="@dimen/text_size_1" />

                    <EditText
                        android:id="@+id/activity_money_et"
                        android:layout_width="0dip"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/block_padding5"
                        android:layout_weight="1"
                        android:background="@color/white"
                        android:gravity="center_vertical"
                        android:hint="请输入活动补贴金额"
                        android:paddingBottom="@dimen/block_padding"
                        android:paddingTop="@dimen/block_padding"
                        android:singleLine="true" />
                </TableRow>
            </TableLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/block_margin"
                android:layout_marginTop="@dimen/block_margin"
                android:paddingLeft="@dimen/block_padding"
                android:text="开始时间"
                android:textColor="@android:color/black"
                android:textSize="@dimen/text_size_1" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="@dimen/block_margin"
                android:background="@drawable/corners_bg" >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/shape_white_bg"
                    android:orientation="horizontal"
                    android:padding="@dimen/block_padding" >

                    <TextView
                        android:id="@+id/start_date_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@drawable/button_style"
                        android:drawableRight="@drawable/selector_arrow_down"
                        android:gravity="center"
                        android:padding="@dimen/block_padding"
                        android:singleLine="true"
                        android:textSize="@dimen/text_size_2" />

                    <TextView
                        android:id="@+id/start_time_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/block_padding5"
                        android:layout_weight="1"
                        android:background="@drawable/button_style"
                        android:drawableRight="@drawable/selector_arrow_down"
                        android:gravity="center"
                        android:padding="@dimen/block_padding"
                        android:singleLine="true"
                        android:textSize="@dimen/text_size_2" />
                </LinearLayout>
            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/block_margin"
                android:paddingLeft="@dimen/block_padding"
                android:text="结束时间"
                android:textColor="@android:color/black"
                android:textSize="@dimen/text_size_1" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/block_margin"
                android:background="@drawable/corners_bg" >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/shape_white_bg"
                    android:orientation="horizontal"
                    android:padding="@dimen/block_padding" >

                    <TextView
                        android:id="@+id/end_date_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@drawable/button_style"
                        android:drawableRight="@drawable/selector_arrow_down"
                        android:gravity="center"
                        android:padding="@dimen/block_padding"
                        android:singleLine="true"
                        android:textSize="@dimen/text_size_2" />

                    <TextView
                        android:id="@+id/end_time_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/block_padding5"
                        android:layout_weight="1"
                        android:background="@drawable/button_style"
                        android:drawableRight="@drawable/selector_arrow_down"
                        android:gravity="center"
                        android:padding="@dimen/block_padding"
                        android:singleLine="true"
                        android:textSize="@dimen/text_size_2" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal"
        android:padding="@dimen/block_margin" >

        <Button
            android:id="@+id/delete_btn"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/block_margin"
            android:layout_weight="1"
            android:background="@drawable/button_style"
            android:text="删除活动" />

        <Button
            android:id="@+id/clear_btn"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/block_margin"
            android:layout_weight="1"
            android:background="@drawable/button_style"
            android:text="清除数据" />

        <Button
            android:id="@+id/save_btn"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/button_style"
            android:text="保存" />
    </LinearLayout>

</LinearLayout>