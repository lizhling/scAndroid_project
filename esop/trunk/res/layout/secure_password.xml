<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/rootView"
    android:background="@drawable/common_bg"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/top_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/title_text_bg" >

        <TextView
            android:id="@+id/top_title_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="20dip"
            android:text="@string/select_your_password"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:textStyle="bold" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dip"
        android:gravity="center_horizontal"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/password_input_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/select_your_password"
            android:layout_centerHorizontal="true"
            android:textColor="@color/black" />

        <EditText
            android:layout_below="@id/password_input_status"
            android:layout_marginTop="10dip"
            android:id="@+id/secure_password"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dip"
            android:layout_marginRight="20dip"
            android:background="@drawable/login_input"
            android:completionThreshold="1"
            android:drawableRight="@drawable/password_icon"
            android:gravity="left|center"
            android:padding="8dip"
            android:password="true"
            android:saveEnabled="true"
            android:singleLine="true"
            android:textColor="@color/login_text"
            android:textColorHint="@color/black"
            android:textSize="@dimen/login_box_row_text_size" />
          <LinearLayout
	        android:id="@+id/button_panel"
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content"
	        android:layout_alignParentBottom="true"
	        android:padding="10dip" >

        <Button
            android:id="@+id/btnCancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/grey_button_bg"
            android:text="@string/cancel"
            android:textColor="#444444"
            android:textSize="18sp" />

        <Button
            android:id="@+id/btnOK"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dip"
            android:layout_weight="1"
            android:background="@drawable/green_button_bg"
            android:text="@string/continu"
            android:textColor="#444444"
            android:textSize="18sp" />
    </LinearLayout>
    </RelativeLayout>


</LinearLayout>