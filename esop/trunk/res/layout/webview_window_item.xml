<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:gravity="center_horizontal">
    <FrameLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent" >           
        <com.starcpt.cmuc.ui.view.MyImageView
          android:id="@+id/webview_image"
          android:layout_width="238dip"
          android:layout_height="320dip"
          android:background="@drawable/multiwindow_tab_bg"/>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:gravity="right">
            <ImageView
                android:id="@+id/web_window_close"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/multiwindow_tab_close_normal" />
        </LinearLayout>
    </FrameLayout>

</LinearLayout>