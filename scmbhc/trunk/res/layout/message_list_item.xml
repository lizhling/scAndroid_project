<LinearLayout 
    xmlns:android="http://schemas.android.com/apk/res/android"
	android:id="@+id/msg_list_item" 
	android:layout_width="match_parent"
	android:layout_height="wrap_content" 
	android:background="@drawable/more_list_selector_bg"
	android:orientation="vertical">
	<LinearLayout 
	    android:id="@+id/mms_layout_view_parent"
		android:paddingLeft="10dip" 
		android:paddingRight="10dip"
		android:paddingTop="5dip"
		android:paddingBottom="5dip"
		android:visibility="gone"
		android:layout_width="match_parent" 
		android:gravity="center_vertical"
		android:background="@drawable/more_list_selector_bg"
		android:layout_height="wrap_content"
		android:orientation="horizontal">
		<ImageView 
			    android:id="@+id/cloud"
			    android:layout_width="wrap_content"
				android:layout_height="wrap_content" 
				android:src="@drawable/ic_launcher"
				android:layout_gravity="center_vertical"/>
		<LinearLayout 
		    android:layout_width="match_parent"
			android:layout_height="wrap_content" 
			android:gravity="center_vertical"
			android:layout_weight="1.0"
			android:orientation="horizontal">
			
			<TextView 
			    android:id="@+id/message_title_view1"
				android:layout_width="0dip"
				android:layout_height="wrap_content"
				android:layout_gravity="center_vertical"
				android:textSize="18sp" 
				android:layout_marginLeft="10dip"
				android:layout_weight="1.0"
				android:textColor="@color/blue"/>
		
			<TextView android:id="@+id/message_date_view1"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content" 
				android:layout_gravity="center_vertical"
				android:textSize="15sp"
				android:layout_marginLeft="10dip"
				android:textColor="@color/blue"
				/>
			
		</LinearLayout>
		<ImageView 
		    android:layout_width="wrap_content" 
		    android:layout_height="wrap_content" 
			android:layout_gravity="right" 
			android:id="@+id/type_icon"
			android:src="@drawable/home_business_1" />
		
	</LinearLayout>
	
	<RelativeLayout    
        android:layout_width="fill_parent"    
        android:layout_height="wrap_content"   
        android:paddingTop="10dip"
        android:paddingBottom="10dip"  
        android:gravity="center_horizontal">    
        <TextView    
            android:id="@+id/message_title_view"    
            android:layout_width="wrap_content"    
            android:layout_height="wrap_content"    
            android:layout_alignParentLeft="true"    
            android:layout_marginLeft="10dp"
            android:ellipsize="marquee"
            android:textStyle="bold"
            android:text="iphone5s合约机"
            android:textSize="15sp"
            android:textColor="@color/black"/>
         <TextView    
            android:id="@+id/message_date_view"    
            android:layout_width="wrap_content"    
            android:layout_height="wrap_content"    
            android:layout_marginTop="2dp"
            android:layout_marginRight="45dip"
			android:layout_alignParentRight="true"
            android:text="2014.2.10"
            android:textSize="10sp"
            android:textColor="@android:color/darker_gray"/>
    	<TextView    
            android:id="@+id/tv_message_content"    
            android:layout_width="wrap_content"    
            android:layout_height="wrap_content"    
            android:layout_below="@id/message_title_view"
            android:layout_alignParentLeft="true"    
            android:layout_marginLeft="10dp"
            android:layout_marginBottom="2dp"
            android:textColor="@android:color/darker_gray"
            android:layout_marginRight="30dip"
            android:ellipsize="marquee"
            android:maxLines="2"
            android:textSize="12sp"
            android:text="测试"
            />
        <ImageView    
            android:id="@+id/iv_system_right"    
            android:layout_width="wrap_content"    
            android:layout_height="wrap_content"    
            android:layout_alignParentRight="true"    
            android:layout_centerVertical="true"    
            android:layout_marginRight="10dp"    
            android:src="@drawable/ic_enter_nor" />    
    	
    </RelativeLayout>    
	
</LinearLayout>

