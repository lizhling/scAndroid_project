<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_btn_azure_edge"
    android:orientation="vertical"
    android:paddingRight="4dip"
    android:paddingTop="4dip" >

    <LinearLayout
        android:id="@+id/status_panel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:gravity="center_horizontal"
        android:orientation="vertical" >

        <ImageView
            android:id="@+id/progress_anim"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/progress_animal" />

        <TextView
            android:id="@+id/load_progress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <ImageView
        android:id="@+id/split"
        android:layout_width="1dip"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_alignTop="@id/status_panel"
        android:layout_alignBottom="@id/status_panel"
        android:layout_margin="10dip"
        android:layout_toRightOf="@id/status_panel"
        android:src="@color/bg_color_yellow_green" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@id/split"
        android:text="@string/downloadprocessmsg"/>

    <ImageView
        android:id="@+id/close_progress_dialog"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginRight="0dip"
        android:src="@drawable/close_icon" />

</RelativeLayout>