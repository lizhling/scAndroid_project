<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:background="@drawable/white_dialog_bg">
    
    <LinearLayout
        android:layout_width="0dip"
        android:layout_height="match_parent"
        android:layout_weight="1.0"
        android:layout_margin="15dip"
        android:gravity="center"
        android:orientation="vertical"
        >
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/progress_animal"
            android:contentDescription="@string/loading_status"/>
        
        <TextView android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginTop="10dip"
            android:textSize="@dimen/text_size_3"
            android:textColor="@color/black"
            android:text="@string/loading_status"/>
    </LinearLayout>
    
    <View android:layout_width="2dip"
	        android:layout_height="match_parent"
	        android:layout_margin="10dip"
	        android:background="@drawable/net_progress_dialog_spilator"/>
    
    <LinearLayout
        android:layout_width="0dip"
        android:layout_height="match_parent"
        android:layout_weight="2.0"
        android:orientation="vertical" 
        android:layout_margin="15dip"
        android:gravity="center_vertical|center_horizontal"
        >
        <TextView android:id="@+id/dialog_message"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:textSize="@dimen/text_size_1"
            android:textStyle="bold"
            android:text="@string/support_version_name"/>
    </LinearLayout>
    
    <ImageView
        android:layout_width="30dip"
        android:layout_height="30dip"
        android:layout_gravity="left|top"
        android:layout_marginTop="5dip"
        android:layout_marginRight="5dip"
        android:src="@drawable/close_icon"
        android:contentDescription="@string/loading_status"/>
    
</LinearLayout>