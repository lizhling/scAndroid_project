<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:gravity="center_horizontal"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/shadow_border"
        android:orientation="vertical"
        android:padding="12dp" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/pop_map_title_bg"
            android:gravity="center_vertical"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/address_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="left"
                android:layout_weight="1"
                android:paddingBottom="10dip"
                android:paddingLeft="10dip"
                android:paddingTop="10dip"
                android:textColor="@android:color/white"
                android:textSize="@dimen/text_size_2"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/synchronous"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:src="@drawable/selector_ic_refresh" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dip"
            android:layout_weight="1.0"
            android:orientation="vertical"
            android:paddingLeft="10dip"
            android:paddingRight="10dip"
            android:paddingTop="8dip" >

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/blue_shape_bg"
                android:gravity="center_vertical"
                android:padding="4dip" >

                <TextView
                    android:id="@+id/current_wait_msg"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="5dip"
                    android:gravity="left"
                    android:text="@string/current_wait"
                    android:textColor="@color/white"
                    android:textSize="@dimen/text_size_2" />

                <TextView
                    android:id="@+id/wait_people"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@id/current_wait_msg"
                    android:gravity="left"
                    android:textColor="@color/white"
                    android:textSize="@dimen/text_size_1" />

                <TextView
                    android:id="@+id/tv_current_wait_man"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@id/wait_people"
                    android:gravity="left"
                    android:text="@string/man"
                    android:textColor="@color/white"
                    android:textSize="@dimen/text_size_2" />

                <Button
                    android:id="@+id/pop_reservation_bt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_gravity="right|center_vertical"
                    android:layout_marginLeft="4dip"
                    android:layout_toRightOf="@id/tv_current_wait_man"
                    android:background="@drawable/selector_bg_btn"
                    android:gravity="center"
                    android:text="@string/reservation_number"
                    android:textColor="@color/selector_click_white_grey"
                    android:textSize="@dimen/text_size_2" />
            </RelativeLayout>

            <TextView
                android:id="@+id/address"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dip"
                android:layout_marginTop="10dip"
                android:gravity="left"
                android:textColor="@color/text_color_gray"
                android:textSize="@dimen/text_size_2" />

            <TextView
                android:id="@+id/phone_number"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dip"
                android:gravity="left"
                android:textColor="@color/text_color_gray"
                android:textSize="@dimen/text_size_2"
                android:visibility="gone" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>