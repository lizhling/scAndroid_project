<?xml version="1.0" encoding="UTF-8"?>
<layer-list
  xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:id="@android:id/background">
        <shape>
            <solid android:color="#ff9b9b9b" />
             <corners android:radius="8dp" />
        </shape>
    </item>
    <item android:id="@android:id/progress">
        <clip>
            <shape>
                 <corners android:radius="8dp" />
                <gradient android:startColor="#ff43bdf3" android:endColor="#005895" android:angle="270.0" android:centerY="0.75" android:centerColor="#ff0493d3" />
            </shape>
        </clip>
    </item>
</layer-list>