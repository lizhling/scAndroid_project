<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_white_f2"
    android:orientation="vertical" >

    <RadioGroup
        android:id="@+id/radioGroupTop"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/white"
        android:orientation="horizontal"
        android:visibility="gone" >

        <RadioButton
            android:id="@+id/radioButton_channelList"
            style="@style/radioStyle2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:text="常用渠道列表" />

        <RadioButton
            android:id="@+id/radioButton_ChannelTree"
            style="@style/radioStyle2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:text="渠道树" />

        <RadioButton
            android:id="@+id/radioButton_favorite"
            style="@style/radioStyle2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:text="收藏网点" />
    </RadioGroup>

    <FrameLayout
        android:id="@+id/fragmentContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1" >
    </FrameLayout>

    <RadioGroup
        android:id="@+id/radioGroupBottom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#465058"
        android:orientation="horizontal" >

        <RadioButton
            android:id="@+id/radioButton_channelMap"
            style="@style/radioHomePage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableTop="@drawable/selector_cloud"
            android:text="渠道云图" />

        <RadioButton
            android:id="@+id/radioButton_myChannel"
            style="@style/radioHomePage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableTop="@drawable/selector_mine"
            android:text="我的渠道" />

        <RadioButton
            android:id="@+id/radioButton_remuneration"
            style="@style/radioHomePage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableTop="@drawable/selector_remuneration"
            android:text="酬金" />

        <TextView
            android:id="@+id/btn_more"
            style="@style/radioHomePage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableTop="@drawable/selector_more"
            android:text="更多" />
    </RadioGroup>

</LinearLayout>