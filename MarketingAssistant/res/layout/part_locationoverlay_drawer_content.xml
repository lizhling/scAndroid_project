<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/content"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:orientation="horizontal" >

    <ImageView
        android:id="@+id/btn_drawer_hide"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/selector_ic_drawer_show" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/shape_white_bg"
        android:orientation="vertical"
        android:padding="@dimen/block_padding" >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ems="2"
                android:text="@string/mapSet"
                android:textSize="@dimen/text_size_2"
                android:textStyle="bold" />

            <CheckBox
                android:id="@+id/check_showMapPoi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:button="@drawable/selector_tagging"
                android:checked="true" />

            <CheckBox
                android:id="@+id/check_mapState_SATELLITE "
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:button="@drawable/selector_satellite" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dip"
            android:background="@drawable/white_dialog_spilator" />

        <LinearLayout
            android:id="@+id/viewGroup_completitorOperate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/block_padding5"
            android:layout_marginTop="@dimen/block_padding5"
            android:gravity="center"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ems="2"
                android:text="渠道展示"
                android:textSize="@dimen/text_size_2"
                android:textStyle="bold" />

            <CheckBox
                android:id="@+id/check_cnmobile"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:button="@drawable/selector_cnmobile"
                android:checked="true" />

            <CheckBox
                android:id="@+id/check_dianxin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:button="@drawable/selector_dianxin" />

            <CheckBox
                android:id="@+id/check_liantong"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:button="@drawable/selector_liantong" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dip"
            android:background="@drawable/white_dialog_spilator" />

        <TextView
            android:id="@+id/textView_indexsortTab"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/block_padding5"
            android:text="指标排序:"
            android:textSize="@dimen/text_size_2"
            android:textStyle="bold" />

        <Spinner
            android:id="@+id/spinner_trigger"
            style="@style/CustomSpinner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:entries="@array/indexsortName"
            android:padding="@dimen/block_padding"
            android:spinnerMode="dialog" />
    </LinearLayout>

</LinearLayout>