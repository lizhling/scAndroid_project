<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_white_f2"
    android:orientation="vertical" >

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <ImageView
                android:id="@+id/image_hall"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="5dip"
                android:scaleType="fitXY"
                android:src="@drawable/hall_icon" />

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dip"
                android:background="@drawable/white_dialog_spilator" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:padding="@dimen/block_padding" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="名称:"
                    android:textColor="@android:color/black"
                    android:textSize="@dimen/text_size_2" />

                <TextView
                    android:id="@+id/hall_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/block_margin"
                    android:textColor="@android:color/black"
                    android:textSize="@dimen/text_size_2" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dip"
                android:background="@drawable/white_dialog_spilator" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:padding="@dimen/block_padding" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="地址:"
                    android:textColor="@android:color/black"
                    android:textSize="@dimen/text_size_2" />

                <TextView
                    android:id="@+id/hall_address"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/block_margin"
                    android:textColor="@android:color/black"
                    android:textSize="@dimen/text_size_2" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dip"
                android:background="@drawable/white_dialog_spilator" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:padding="@dimen/block_padding" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="联系人:"
                    android:textColor="@android:color/black"
                    android:textSize="@dimen/text_size_2" />

                <TextView
                    android:id="@+id/hall_linkman"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/block_margin"
                    android:textColor="@android:color/black"
                    android:textSize="@dimen/text_size_2" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dip"
                android:background="@drawable/white_dialog_spilator" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:padding="@dimen/block_padding" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="电话:"
                    android:textColor="@android:color/black"
                    android:textSize="@dimen/text_size_2" />

                <TextView
                    android:id="@+id/hall_tel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/block_margin"
                    android:textColor="@android:color/black"
                    android:textSize="@dimen/text_size_2" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dip"
                android:background="@drawable/white_dialog_spilator" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:padding="@dimen/block_padding" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="星级:"
                    android:textColor="@android:color/black"
                    android:textSize="@dimen/text_size_2" />

                <TextView
                    android:id="@+id/hall_starLevel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/block_margin"
                    android:textColor="@android:color/black"
                    android:textSize="@dimen/text_size_2" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dip"
                android:background="@drawable/white_dialog_spilator" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:padding="@dimen/block_padding" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="店铺员工数:"
                    android:textColor="@android:color/black"
                    android:textSize="@dimen/text_size_2" />

                <TextView
                    android:id="@+id/hall_numOfEmployees"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/block_margin"
                    android:layout_weight="1"
                    android:text="0人"
                    android:textColor="@android:color/black"
                    android:textSize="@dimen/text_size_2" />
            </LinearLayout>

            <TableLayout
                android:id="@+id/table_employee"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/diliver_d4"
                android:visibility="gone" >

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dip"
                    android:background="@drawable/white_dialog_spilator" />

                <TableRow
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/block_padding" >

                    <TextView
                        style="@style/tableItemStyle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="员工号"
                        android:textStyle="bold" />

                    <TextView
                        style="@style/tableItemStyle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="名称"
                        android:textStyle="bold" />

                    <TextView
                        style="@style/tableItemStyle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="当前积分"
                        android:textStyle="bold" />

                    <TextView
                        style="@style/tableItemStyle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="总积分"
                        android:textStyle="bold" />
                </TableRow>
            </TableLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dip"
                android:background="@drawable/white_dialog_spilator" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal" >

                <Button
                    android:id="@+id/btn_sign"
                    style="?android:attr/buttonStyleSmall"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/block_padding"
                    android:layout_weight="1"
                    android:background="@drawable/button_style"
                    android:padding="@dimen/block_padding"
                    android:text="走访渠道" />

                <Button
                    android:id="@+id/btn_editInfo"
                    style="?android:attr/buttonStyleSmall"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/block_padding"
                    android:layout_weight="1"
                    android:background="@drawable/button_style"
                    android:padding="@dimen/block_padding"
                    android:text="修改资料" />

                <ToggleButton
                    android:id="@+id/btn_collection"
                    style="@android:style/Widget.CompoundButton.Star"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/block_padding"
                    android:layout_weight="1"
                    android:background="@drawable/button_style"
                    android:padding="@dimen/block_padding"
                    android:textOff="未收藏"
                    android:textOn="已收藏" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dip"
                android:background="@drawable/white_dialog_spilator" />

            <WebView
                android:id="@+id/webview"
                android:layout_width="match_parent"
                android:layout_height="240dip"
                android:clickable="true"
                android:clipChildren="true"
                android:visibility="gone" />

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dip"
                android:background="@drawable/white_dialog_spilator" />
        </LinearLayout>
    </ScrollView>

</LinearLayout>